    bool canAssign(vector<int>& tasks, vector<int>& workers, int pills, int strength, int k) {
        multiset<int> ws(workers.end() - k, workers.end()); // strongest k workers

        for (int i = k - 1; i >= 0; i--) {  // hardest to easiest task
            int task = tasks[i];
            auto it = ws.end(); it--;  // strongest worker

            if (*it >= task) {
                ws.erase(it); // assign without pill
            } else {
                if (pills == 0) return false;

                // find weakest worker that can do task with pill
                it = ws.lower_bound(task - strength);
                if (it == ws.end()) return false;

                ws.erase(it);
                pills--;
            }
        }
        return true;
    }

    int maxTaskAssign(vector<int>& tasks, vector<int>& workers, int pills, int strength) {
        sort(tasks.begin(), tasks.end());
        sort(workers.begin(), workers.end());

        int l = 0, r = min(tasks.size(), workers.size()), ans = 0;

        while (l <= r) {
            int mid = (l + r) / 2;
            if (canAssign(tasks, workers, pills, strength, mid)) {
                ans = mid;
                l = mid + 1;
            } else {
                r = mid - 1;
            }
        }
        return ans;
    }
